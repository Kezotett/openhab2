    <channel-type id="command-channel">
        <item-type>Switch</item-type>
        <label>Command Channel</label>
        <description></description>
    </channel-type>

    <channel-type id="contact-channel">
        <item-type>Contact</item-type>
        <label>Contact Channel</label>
        <description></description>
    </channel-type>

    <channel-type id="dimminglevel-channel">
        <item-type>Dimmer</item-type>
        <label>Dimming Level Channel</label>
        <description></description>
        <state min="0" max="100" step="1" readOnly="false"></state>
    </channel-type>

    <channel-type id="mood-channel">
        <item-type>Number</item-type>
        <label>Mood Channel</label>
        <description></description>
         <state min="1" max="5" step="1" readOnly="false"></state>
    </channel-type>

    <channel-type id="status-channel">
        <item-type>String</item-type>
        <label>Status Channel</label>
        <description></description>
 		<state readOnly="false"></state>
    </channel-type>

    <channel-type id="setpoint-channel">
        <item-type>Number</item-type>
        <label>Set-point Channel</label>
        <description>Requested temperature</description>
         <state min="0" max="255" step="1" pattern="%d Â°C" readOnly="false"></state>
    </channel-type>

    <channel-type id="motion-channel">
        <item-type>Switch</item-type>
        <label>Motion Channel</label>
        <description>Motion detection sensor state</description>
        <state readOnly="false"></state>
    </channel-type>

    <channel-type id="rainrate-channel">
        <item-type>Number</item-type>
        <label>Rain Rate Channel</label>
        <description>Rain fall rate in millimeters per hour</description>
        <state pattern="%d mm/h" readOnly="true"></state>
    </channel-type>

    <channel-type id="raintotal-channel">
        <item-type>Number</item-type>
        <label>Rain Total Channel</label>
        <description>Total rain in millimeters</description>
        <state pattern="%d mm" readOnly="true"></state>
    </channel-type>

    <channel-type id="shutter-channel">
        <item-type>Rollershutter</item-type>
        <label>Shutter Channel</label>
        <description></description>
    </channel-type>

    <channel-type id="instantpower-channel">
        <item-type>Number</item-type>
        <label>Instant Power Channel</label>
        <description>Instant power consumption in Watts</description>
        <state pattern="%d W" readOnly="true"></state>
    </channel-type>

    <channel-type id="totalusage-channel">
        <item-type>Number</item-type>
        <label>Total Usage Channel</label>
        <description>Used energy in Watt hours</description>
        <state pattern="%d Wh" readOnly="true"></state>
    </channel-type>

    <channel-type id="instantamp-channel">
        <item-type>Number</item-type>
        <label>Instant Amp Channel</label>
        <description>Instant current in Amperes</description>
        <state pattern="%d A" readOnly="true"></state>
    </channel-type>

    <channel-type id="totalamphours-channel">
        <item-type>Number</item-type>
        <label>Total Ampere-hours Channel</label>
        <description>Used "energy" in ampere-hours</description>
        <state pattern="%d Ah" readOnly="true"></state>
    </channel-type>

    <channel-type id="temperature-channel">
        <item-type>Number</item-type>
        <label>Temperature Channel</label>
        <description>Current temperature in degree Celsius</description>
         <state pattern="%d Â°C" readOnly="true"></state>
    </channel-type>

    <channel-type id="humidity-channel">
        <item-type>Number</item-type>
        <label>Humidity Channel</label>
        <description>Relative humidity level in percentages</description>
        <state min="0" max="100" step="1" pattern="%d %" readOnly="true"></state>
    </channel-type>

	<channel-type id="humiditystatus-channel">
		<item-type>String</item-type>
		<label>Humidity Status Channel</label>
		<description>Current humidity status</description>
		<state readOnly="true">
			<options>
				<option value="NORMAL">Normal humidity</option>
				<option value="COMFORT">Comfort humidity</option>
				<option value="DRY">Dry humidity</option>
				<option value="WET">Wet humidity</option>
			</options>
		</state>
	</channel-type>

    <channel-type id="signallevel-channel">
        <item-type>Number</item-type>
        <label>Signal Level Channel</label>
        <description>Received signal strength level</description>
        <state min="0" max="15" step="1" readOnly="true"></state>
    </channel-type>

    <channel-type id="batterylevel-channel">
        <item-type>Number</item-type>
        <label>Battery Level Channel</label>
        <description>Battery level</description>
        <state min="0" max="9" step="1" readOnly="true"></state>
    </channel-type>

    <channel-type id="windspeed-channel">
        <item-type>Number</item-type>
        <label>Wind Speed Channel</label>
        <description>Average wind speed in meters per second</description>
        <state pattern="%d m/s" readOnly="true"></state>
    </channel-type>

    <channel-type id="winddirection-channel">
        <item-type>Number</item-type>
        <label>Wind Direction Channel</label>
        <description>Wind direction in degrees</description>
        <state min="0" max="360" step="1" readOnly="true"></state>
    </channel-type>

