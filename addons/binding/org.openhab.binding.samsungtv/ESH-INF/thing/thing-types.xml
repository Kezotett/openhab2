	<channel-type id="volume-channel">
		<item-type>Dimmer</item-type>
		<label>Volume Channel</label>
		<description>The volume channel allows to set or get the volume of the TV</description>
		<state readOnly="false" />
	</channel-type>

	<channel-type id="mute-channel">
		<item-type>Switch</item-type>
		<label>Mute channel</label>
		<description>The mute channel allows to set or get the mute state of the master volume of the TV</description>
		<state readOnly="false" />
	</channel-type>

	<channel-type id="brightness-channel">
		<item-type>Dimmer</item-type>
		<label>Brightness channel</label>
		<description>The brightness channel allows to set or get the brightness of the TV picture</description>
		<state readOnly="false" />
	</channel-type>

	<channel-type id="contrast-channel">
		<item-type>Dimmer</item-type>
		<label>Contrast channel</label>
		<description>The contrast channel allows to set or get the contrast of the TV picture</description>
		<state readOnly="false" />
	</channel-type>

	<channel-type id="sharpness-channel">
		<item-type>Dimmer</item-type>
		<label>Sharpness channel</label>
		<description>The sharpness channel allows to set or get the sharpness of the TV picture</description>
		<state readOnly="false" />
	</channel-type>

	<channel-type id="colortemperature-channel">
		<item-type>Number</item-type>
		<label>Color Temperature channel</label>
		<description>The color temperature channel allows to set or get the color temperature of the TV picture. Minimum value is 0 and maximum 4.</description>
		<state readOnly="false" min="0" max="4" />
	</channel-type>

