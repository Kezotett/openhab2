				<required>false</required>
			</parameter>
			<parameter name="refresh_interval" type="integer">
				<label>Refresh Interval</label>
				<description>States how often a refresh shall occur</description>
				<default>10000</default>
				<required>false</required>
			</parameter>
		</config-description>
	</thing-type>

