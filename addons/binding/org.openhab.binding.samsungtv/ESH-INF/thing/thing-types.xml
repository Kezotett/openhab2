	<thing-type id="mediarenderer">
		<label>Samsung TV - Media Renderer</label>
		<description>Media Renderer sub device allows to control TV volume and display parameters</description>

		<channels>
			<channel id="volume" typeId="volume-channel" />
			<channel id="mute" typeId="mute-channel" />
			<channel id="brightness" typeId="brightness-channel" />
			<channel id="contrast" typeId="contrast-channel" />
			<channel id="sharpness" typeId="sharpness-channel" />
			<channel id="colortemperature" typeId="colortemperature-channel" />
		</channels>

		<config-description>
			<parameter name="udn" type="text">
				<label>Unique Device Name</label>
				<description>The UDN identifies the Samsung TV UPnP Device</description>
				<required>true</required>
			</parameter>
			<parameter name="refresh_interval" type="integer">
				<label>Refresh Interval</label>
				<description>States how often a refresh shall occur</description>
				<default>10000</default>
				<required>false</required>
			</parameter>
		</config-description>
	</thing-type>

	<thing-type id="tvagent">
